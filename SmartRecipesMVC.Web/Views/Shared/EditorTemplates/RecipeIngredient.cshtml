@model SmartRecipesMVC.Domain.Model.Connections.RecipeIngredient

<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Ingredient.Name" class="col-form-label"></label>
            <input asp-for="Ingredient.Name" class="form-control" />
            <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-4" id="quantityDiv">
        <div class="form-group">
            <label asp-for="Quantity" class="col-form-label"></label>
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-4" id="weightDiv">
        <div class="form-group">
            <label asp-for="Weight" class="col-form-label"></label>
            <input asp-for="Weight" class="form-control" placeholder="Weight" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>
</div>
