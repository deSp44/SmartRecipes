@using System.Collections.Specialized
@model SmartRecipesMVC.Domain.Model.Connections.RecipeIngredient

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Ingredient.Name" class="col-form-label"></label>
            <input asp-for="Ingredient.Name" class="form-control" />
            <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Quantity" class="col-form-label"></label>
            <input id="input1" asp-for="Quantity" class="form-control"/>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Weight" class="col-form-label"></label>
            <input id="input2" asp-for="Weight" class="form-control"/>
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>
</div>
